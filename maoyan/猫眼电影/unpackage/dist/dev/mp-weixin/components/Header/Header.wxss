.header {
  width: 100%;
  height: 100rpx;
  background-color: #e54847;
  color: white;
  position: relative;
}
.header .header-title {
  width: 100%;
  height: 100%;
  text-align: center;
  line-height: 100rpx;
}
.header .header-icon {
  position: absolute;
  width: 33rpx;
  height: 33rpx;
  top: 50%;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
  right: 18rpx;
  color: white;
}
.header .header-mute {
  position: absolute;
  top: 90rpx;
  background-color: #55ff7f;
  right: 20rpx;
  width: 220rpx;
  display: none;
  flex-wrap: wrap;
}
.header .header-mute view {
  width: 100%;
  height: 90rpx;
  text-align: center;
  line-height: 90rpx;
}

