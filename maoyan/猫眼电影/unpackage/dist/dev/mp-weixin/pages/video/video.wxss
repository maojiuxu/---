.header {
  width: 100%;
  height: 100rpx;
  background-color: #e54847;
  color: white;
  position: relative;
}
.header .header-title {
  width: 100%;
  height: 100%;
  text-align: center;
  line-height: 100rpx;
}
.header .header-icon {
  position: absolute;
  width: 33rpx;
  height: 33rpx;
  top: 50%;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
  right: 18rpx;
  color: white;
}
.header .header-mute {
  position: absolute;
  top: 90rpx;
  background-color: #55ff7f;
  right: 20rpx;
  width: 220rpx;
  display: none;
  flex-wrap: wrap;
}
.header .header-mute view {
  width: 100%;
  height: 90rpx;
  text-align: center;
  line-height: 90rpx;
}

.open-app {
  width: 100%;
  height: 100rpx;
  padding: 0 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: aqua;
}
.open-app ._img {
  width: 188rpx;
  height: 78rpx;
}
.open-app .to-app {
  line-height: 100rpx;
  font-weight: 800;
  display: flex;
  position: relative;
}
.open-app .to-app .find-newmovie {
  color: #666;
  padding-right: 20rpx;
  font-size: 28rpx;
}
.open-app .to-app .fenge {
  width: 1rpx;
  height: 28rpx;
  border: none;
  background-color: #999;
  position: absolute;
  top: 50%;
  right: 170rpx;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
}
.open-app .to-app .click-to-app {
  color: #b37e7e;
  font-size: 32rpx;
}

.video-page {
  width: 100%;
}
.video-page .video-nav-scroll {
  height: 100rpx;
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-between;
  padding: 10rpx 0;
  margin-bottom: 20rpx;
}
.video-page .video-nav-scroll .nav-item {
  height: 80rpx;
  flex-shrink: 0;
  line-height: 80rpx;
  text-align: center;
  padding: 0 20rpx;
}
.video-page .video-nav-scroll .active {
  border-bottom: 4rpx solid #e54847;
}
.video-page .video-details-scroll {
  display: flex;
  flex-direction: column;
  width: 100%;
}
.video-page .video-details-scroll .video-details-scroll-item {
  margin-bottom: 40rpx;
  width: 100%;
}
.video-page .video-details-scroll .video-details-scroll-item .video-source {
  position: relative;
  height: 460rpx;
}
.video-page .video-details-scroll .video-details-scroll-item .video-source video {
  width: 100%;
  height: 450rpx;
}
.video-page .video-details-scroll .video-details-scroll-item .video-source .video-video-title {
  width: 600rpx;
  position: absolute;
  top: 20rpx;
  left: 30rpx;
  color: white;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}
.video-page .video-details-scroll .video-details-scroll-item .video-userInfo {
  display: flex;
  justify-content: space-between;
  height: 60rpx;
}
.video-page .video-details-scroll .video-details-scroll-item .video-userInfo .userinfo-left {
  height: 100%;
  line-height: 60rpx;
  position: relative;
  margin-left: 20rpx;
}
.video-page .video-details-scroll .video-details-scroll-item .video-userInfo .userinfo-left image {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
}
.video-page .video-details-scroll .video-details-scroll-item .video-userInfo .userinfo-left text {
  position: absolute;
  top: 0%;
  left: 80rpx;
  height: 60rpx;
  line-height: 60rpx;
  white-space: nowrap;
}
.video-page .video-details-scroll .video-details-scroll-item .video-userInfo .userinfo-right {
  display: flex;
  justify-content: space-between;
  margin-right: 20rpx;
  line-height: 60rpx;
}
.video-page .video-details-scroll .video-details-scroll-item .video-userInfo .userinfo-right .video-recommend {
  margin: 0 40rpx;
}

