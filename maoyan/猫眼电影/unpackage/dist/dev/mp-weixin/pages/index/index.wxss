.top-nav {
  display: flex;
  justify-content: space-between;
  width: 100%;
  height: 100rpx;
  padding: 0 30rpx;
  border-top: 1rpx solid #999;
  border-bottom: 1rpx solid #999;
}
.top-nav .nav-position {
  line-height: 100rpx;
}
.top-nav .nav-title {
  display: flex;
  justify-content: space-evenly;
}
.top-nav .nav-title .nav-title-detail {
  margin: 0 20rpx;
  line-height: 100rpx;
  font-weight: 800;
  color: #666;
}
.top-nav .nav-search {
  color: #e54847;
  width: 32rpx;
  height: 32rpx;
}
.movies {
  width: 100%;
  position: absolute;
  top: 300rpx;
}
.movies .praise {
  padding: 0 30rpx;
}
.movies .praise .praise-movie-title {
  height: 80rpx;
  line-height: 80rpx;
  color: #555;
  font-size: 30rpx;
}
.movies .praise .praise-movie-details {
  display: flex;
  height: 300rpx;
}
.movies .praise .praise-movie-details .movie-detail-item {
  width: 160rpx;
  height: 100%;
  margin-right: 20rpx;
  position: relative;
}
.movies .praise .praise-movie-details .movie-detail-item .movie-item-img ._img {
  width: 160rpx;
  height: 220rpx;
}
.movies .praise .praise-movie-details .movie-detail-item view {
  width: 160rpx;
  font-weight: 800;
  font-size: 28rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}
.movies .praise .praise-movie-details .movie-detail-item .movie-score {
  position: absolute;
  top: 180rpx;
  left: 6rpx;
  color: #d9c636;
  font-weight: 800;
  font-size: 24rpx;
}
.movies .show-movies {
  margin-top: 20rpx;
  padding: 0 30rpx;
}
.movies .show-movies .show-movies-scroll {
  width: 690rpx;
  display: flex;
  justify-content: space-around;
  flex-direction: column;
}
.movies .show-movies .show-movies-scroll scroll-item {
  position: relative;
  width: 100%;
  height: 220rpx;
  display: flex;
  flex-wrap: nowrap;
  justify-content: flex-start;
}
.movies .show-movies .show-movies-scroll scroll-item ._img {
  width: 120rpx;
  height: 165rpx;
  margin-right: 20rpx;
}
.movies .show-movies .show-movies-scroll scroll-item .show-movies-details .movie-name {
  display: flex;
}
.movies .show-movies .show-movies-scroll scroll-item .show-movies-details .movie-name #first-name {
  font-weight: 800;
}
.movies .show-movies .show-movies-scroll scroll-item .show-movies-details .movie-name .imax-2d {
  height: 28rpx;
  border-radius: 6rpx;
  display: flex;
  border: 1rpx solid #1c83c7;
  padding: none;
  margin: 8rpx 10rpx;
  background-color: #fff;
  position: relative;
}
.movies .show-movies .show-movies-scroll scroll-item .show-movies-details .movie-name .imax-2d #second-2d {
  position: absolute;
  text-align: center;
  width: 30rpx;
  top: -1rpx;
  left: -1rpx;
  padding-right: 10rpx;
  font-size: 16rpx;
  line-height: 28rpx;
  border-radius: 6rpx 0rpx 0rpx 6rpx;
  color: white;
  background-color: #1c83c7;
  padding: 2rpx;
}
.movies .show-movies .show-movies-scroll scroll-item .show-movies-details .movie-name .imax-2d #third-imax {
  font-size: 16rpx;
  margin-left: 40rpx;
  line-height: 28rpx;
  color: #1c83c7;
  background-color: white;
}
.movies .show-movies .show-movies-scroll scroll-item .show-movies-details .movie-actors {
  color: #666;
  font-size: 28rpx;
}
.movies .show-movies .show-movies-scroll scroll-item .show-movies-details .movie-actors view {
  margin-bottom: 10rpx;
}
.movies .show-movies .show-movies-scroll scroll-item .show-movies-details .movie-actors .movie-actors-score {
  margin-left: 10rpx;
  color: #edd93a;
  font-weight: 800;
}
.movies .show-movies .show-movies-scroll scroll-item .movie-shop {
  position: absolute;
  right: 0;
  top: 50%;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
  width: 120rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  background-color: #e54847;
  color: white;
  border-radius: 30rpx;
}
.movies .hot-actors {
  width: 100%;
  padding: 0 30rpx;
  font-size: 28rpx;
}
.movies .hot-actors .hot-actors-title {
  margin: 10rpx 0;
}
.movies .hot-actors .hot-actors-details {
  display: flex;
  height: 300rpx;
}
.movies .hot-actors .hot-actors-details .hot-actors-item {
  width: 200rpx;
  height: 300rpx;
  margin-right: 20rpx;
}
.movies .hot-actors .hot-actors-details .hot-actors-item image {
  width: 180rpx;
  height: 220rpx;
}
.movies .hot-actors .hot-actors-details .hot-actors-item .hot-actors-name {
  font-weight: 800;
  font-size: 28rpx;
}

